<Window x:Class="GameClubManager.Client.Dialogs.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите пароль" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Для закрытия приложения введите пароль администратора:"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>
        
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="1"
                     Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="75"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button Content="Отмена"
                    Width="75"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 