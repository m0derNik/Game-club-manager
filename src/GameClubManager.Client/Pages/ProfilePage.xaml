<Page x:Class="GameClubManager.Client.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Профиль">

    <Grid Margin="24">
        <materialDesign:Card Style="{StaticResource ModernCard}"
                           Width="600"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Аватар и имя -->
                <StackPanel Grid.Row="0" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,32">
                    <Ellipse Width="120" 
                           Height="120" 
                           Margin="0,0,0,16">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding AvatarSource}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding Username}"
                             Style="{StaticResource HeaderTextStyle}"
                             HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="1"
                          Orientation="Horizontal"
                          HorizontalAlignment="Center"
                          Margin="0,24,0,32">
                    <Button Style="{StaticResource ModernButton}"
                            Command="{Binding AddBalanceCommand}"
                            Margin="8,0"
                            Width="220">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cash" 
                                                   Width="20" 
                                                   Height="20"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Пополнить баланс"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Кнопка выхода -->
                <Button Grid.Row="2"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding LogoutCommand}"
                        Margin="8,0,8,0"
                        Width="180"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" 
                                               Width="20" 
                                               Height="20"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Выйти"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page> 