<Page x:Class="GameClubManager.Client.Pages.TariffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Тарифы">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок страницы и баланс -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Тарифы"
                     Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Ваш баланс: "
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         Margin="0,0,4,0"
                         VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Balance, StringFormat={}{0:C}}"
                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                         Foreground="{DynamicResource PrimaryBrush}"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Список тарифов -->
        <ItemsControl Grid.Row="1" 
                    ItemsSource="{Binding Tariffs}"
                    Margin="0,8">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Margin="8,8,16,16"
                                       Width="280"
                                       Background="{DynamicResource SurfaceBrush}"
                                       UniformCornerRadius="8">
                        <Grid>
                            <!-- Обозначение популярного тарифа -->
                            <materialDesign:PackIcon Kind="Star"
                                                   Width="24" Height="24"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,8,8,0"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   Visibility="{Binding IsPopular, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <StackPanel Margin="16">
                                <!-- Название тарифа -->
                                <TextBlock Text="{Binding Name}"
                                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Margin="0,0,0,8"/>
                                
                                <!-- Описание тарифа -->
                                <TextBlock Text="{Binding Description}"
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         TextWrapping="Wrap"
                                         Margin="0,0,0,16"
                                         Height="40"/>
                                
                                <!-- Продолжительность и стоимость -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Продолжительность:"
                                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Foreground="{DynamicResource TextPrimaryBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} ч {1} мин">
                                                    <Binding Path="Duration.Hours"/>
                                                    <Binding Path="Duration.Minutes"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1"
                                             Text="{Binding Price, StringFormat={}{0:C}}"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             VerticalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryBrush}"/>
                                </Grid>
                                
                                <!-- Кнопка покупки -->
                                <Button Style="{StaticResource ModernButton}"
                                        Command="{Binding DataContext.BuyTariffCommand, 
                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Cart" 
                                                               Width="20" 
                                                               Height="20"
                                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="Купить"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page> 